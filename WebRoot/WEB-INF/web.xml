<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>TestLoginBeanServlet</servlet-name>
    <servlet-class>servlet.TestLoginBeanServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TestLoginBeanServlet</servlet-name>
    <url-pattern>/TestLoginBeanServlet</url-pattern>
  </servlet-mapping>
  <filter>
  <filter-name>IsLoginFilter</filter-name>
  <filter-class>filter.IsLoginFilter</filter-class>
  <init-param>
  <param-name>loginFilterPath</param-name>
  <param-value>login.html;</param-value>
  </init-param>
  </filter>
  <filter-mapping>
  <filter-name>IsLoginFilter</filter-name>
  <url-pattern>/back/*</url-pattern>
  </filter-mapping>
  <error-page>
  	<error-code>404</error-code>
  	<location>/index.jsp</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
